        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment5_ChildMath"
        mc:Ignorable="d"
        Title="Math Game" Height="350" Width="525" Foreground="Black">
    <Window.Background>
        <ImageBrush ImageSource="Images/Bingo_and_Rolly_of_Puppy_Dog_Pals_(1).png" Stretch="Uniform"/>
    </Window.Background>
    <Grid>
        <Button Content="Enter Player Info" HorizontalAlignment="Left" Margin="10,228,0,0" VerticalAlignment="Top" Width="116" Height="81" Click="Button_Click" RenderTransformOrigin="0.341,2.43"/>
        <Button x:Name="btnStart" Content="Start your Game" HorizontalAlignment="Left" Margin="389,228,0,0" VerticalAlignment="Top" Width="118" Height="81" IsEnabled="False" AutomationProperties.Name="btnStart" Click="btnStart_Click" Background="{x:Null}"/>

    </Grid>
</Window>
